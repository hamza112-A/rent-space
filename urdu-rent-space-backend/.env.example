# Server Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/urdu-rent-space?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-complex-at-least-32-characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-here-different-from-jwt-secret
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (Nodemailer)
EMAIL_FROM=noreply@urdurental.pk
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# File Upload (Cloudinary)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Payment Gateway (Stripe for international)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# JazzCash Integration (Pakistan)
JAZZCASH_MERCHANT_ID=your-jazzcash-merchant-id
JAZZCASH_PASSWORD=your-jazzcash-password
JAZZCASH_RETURN_URL=http://localhost:3000/payment/callback
JAZZCASH_SANDBOX=true

# Easypaisa Integration (Pakistan)
EASYPAISA_STORE_ID=your-easypaisa-store-id
EASYPAISA_HASH_KEY=your-easypaisa-hash-key
EASYPAISA_SANDBOX=true

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Frontend URL
FRONTEND_URL=http://localhost:3000
ADMIN_FRONTEND_URL=http://localhost:3001

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_LISTING=10
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,video/mp4

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=true

# Google Maps API (for location services)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Admin Configuration
ADMIN_EMAIL=admin@urdurental.pk
ADMIN_PHONE=+923001234567
SUPER_ADMIN_EMAIL=superadmin@urdurental.pk

# OTP Configuration
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6

# Session Configuration
SESSION_SECRET=your-session-secret-key-here
SESSION_COOKIE_MAX_AGE=86400000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Subscription Plans
FREE_PLAN_LISTINGS_LIMIT=3
PREMIUM_PLAN_PRICE_PKR=500
PREMIUM_PLAN_PRICE_USD=7.99